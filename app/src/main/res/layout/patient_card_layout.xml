<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/patientCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/patientsImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/patients" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/patientsImage"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">


            <TextView
                android:id="@+id/patientsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Patient Name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/patientsAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Patient Age"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/patientsGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Patient Gender"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <Button
                android:id="@+id/patientsViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/edit_text_border"
                android:minWidth="60dp"
                android:minHeight="0dp"
                android:paddingStart="5dp"
                android:paddingTop="0dp"
                android:paddingEnd="5dp"
                android:paddingBottom="0dp"
                android:text="View Details"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/patientsBookAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edit_text_border"
                android:minWidth="60dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="0dp"
                android:text="Book"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>